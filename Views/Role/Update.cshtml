@model RoleEdit
@{
    ViewData["Title"] = "UPDATE ROLE";
}

<div class="container-create"><h1 class="bg-info text-white">Update Role</h1></div>
<div class="container-create"><p> </p></div>
<div class="container-create"><a asp-action="Index" class="button">Back</a></div>
<div class="container-create"><p> </p></div>
<div asp-validation-summary="All" class="text-danger"></div>

<div class="container-create">
    <form method="post">
        <input type="hidden" name="RoleName" value="@Model.Role.Name" />
        <input type="hidden" name="RoleId" value="@Model.Role.Id" />

        <h2 class="bg-info p-1 text-white">Add To @Model.Role.Name</h2>
        <div class="table-container">
            <table class="table table-bordered table-sm">
                @if (Model.NonMembers.Count() == 0)
                {
                    <tr><td colspan="2">All Users Are Members</td></tr>
                }
                else
                {
                    @foreach (AppUser user in Model.NonMembers)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>
                                <input type="checkbox" name="AddIds" value="@user.Id">
                            </td>
                        </tr>
                    }
                }
            </table>
        </div>

        <div class="container-create"><p> </p></div>
        <div class="container-create"><h2 class="bg-info p-1 text-white">Remove From @Model.Role.Name</h2></div>
        <div class="container-create"><p> </p></div>
        <div class="table-container">
            <table class="table table-bordered table-sm">
                @if (Model.Members.Count() == 0)
                {
                    <tr><td colspan="2">No Users Are Members</td></tr>
                }
                else
                {
                    @foreach (AppUser user in Model.Members)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>
                                <input type="checkbox" name="DeleteIds" value="@user.Id">
                            </td>
                        </tr>
                    }
                }
            </table>
        </div>
        <button type="submit" class="submit-button">Save</button>
    </form>
</div>
