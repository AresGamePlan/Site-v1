@model IEnumerable<CADFile>
@using Microsoft.AspNetCore.Authorization

<h2>Список файлов CAD</h2>

<form asp-controller="CADFiles" asp-action="UploadFile" method="post" enctype="multipart/form-data">
    <input type="file" name="file" />
    <button type="submit">Загрузить файл</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Имя файла</th>
            <th>Дата загрузки</th>
            <th>Действие</th>
        </tr>
    </thead>
    <tbody>
        @foreach (CADFile file in Model)
        {
            <tr>
                <td>@file.FileName</td>
                <td>@file.UploadData</td>
                <td>
                    <a href="@Url.Action("DownloadFile", "CADFiles", new { fileName = file.FileName })"><button>Скачать</button></a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a href="@Url.Action("DeleteFile", "CADFiles", new { id = file.Id })
                        " onclick="return confirm('Вы уверены, что хотите удалить этот файл?');">Удалить</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>