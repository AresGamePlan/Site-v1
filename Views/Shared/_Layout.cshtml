@using Microsoft.AspNetCore.Authorization

<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Identity</title>
    <!--<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">-->
    <!--<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />-->
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid" data-bs-theme="dark">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Main Menu</a>
                        <a class="btn btn-secondary" asp-controller="Home" asp-action="Secured">Secured</a>
                        @if (User.IsInRole("admin"))
                        {
                                <a class="btn btn-secondary" asp-controller="Admin" asp-action="Index">Admin Panel</a>
                                <a class="btn btn-secondary" asp-controller="Role" asp-action="Index">Roles</a>
                        }
                            <a class="btn btn-secondary" asp-controller="Projects" asp-action="Index">Projects</a>

                        @if (User.IsInRole("admin"))
                        {
                                <a class="btn btn-secondary" asp-controller="CADFiles" asp-action="Index">Upload</a>
                        }
            </div>
        </nav>
    </header>
    <div class="container" data-bs-theme="dark">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
    </footer>

    
    <!--<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>-->

    <!--<script src="~/lib/jquery/dist/jquery.min.js"></script>--->
    <!--<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>-->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
