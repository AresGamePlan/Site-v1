@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "ROLES";
}

<div class="container-create"><h1 class="bg-info text-white">All Roles</h1></div>
<div class="container-create"><p> </p></div>
<div class="container-create"><a asp-action="Create" class="button">Create a Role</a></div>
<div class="container-create"><p> </p></div>

<div class="table-container">
    <table class="table table-sm table-bordered table-bordered">
        <thead><th>ID</th><th>Name</th><th>Users</th><th>Update</th><th>Delete</th></thead>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td i-role="@role.Id"></td>
                <td><a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@role.Id">Update</a></td>
                <td>
                    <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                        <button type="submit" class="submit-button">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
</div>