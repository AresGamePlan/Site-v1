@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "READ USER";
}
<div class="container-create">
    <h1 class="bg-info text-white">All Users</h1>
</div>
<div class="container-create">
    <p> </p>
</div>
<div class="container-create">
    <a asp-action="Create" class="button">Create a User</a>
</div>

<div class="table-container">
    <table class="table">
        <thead>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Update</th>
            <th>Delete</th>
        </thead>
        @foreach (AppUser user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a class="button" asp-action="Update" asp-route-id="@user.Id">
                        Update
                    </a>
                </td>
                <td>
                    <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                        <button type="submit" class="submit-button">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
</div>